generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider{
  Google
  Credentials
}

model User{
  id    Int @id @default(autoincrement())
  email String @unique
  password String? 
  provider Provider
  platformToken String? @unique
  planId String 
  usedRequest Int @default(0)
  plan  Plan  @relation(references: [id], fields: [planId])
}

model Plan{
  id String @id
  name PlanType
  description String
  price     Int
  totalRequest Int
  features Json
  users User[]

  @@unique([name])
}


